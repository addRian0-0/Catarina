<%if (logindirec===true) {%>
    <%if(escuelaExist === true ){%>
        <%- include ('../partials/headerDirec') %>
            <div class="row justify-content-center my-5">
                <div class="col-md-10 col-sm-12 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="w-100 text-center my-1">
                                            Puedes ver el enlace de invitación para tus alumnos haciendo click en el botón:
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12 text-center">
                                        <div class="w-100">
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                <i class="fas fa-user-plus"></i>   Ver enlace
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Enlace de invitación para alumnos</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="input-group mb-3">
                                                    <input type="text" class="form-control" name="" id="linkAlum" value="<%= linkInvitacion %>">
                                                    <button class="btn btn-outline-primary" onclick="copiarEnlaceAlum()" type="button"><i class="fas fa-clipboard"></i> Copiar</button>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form action="/enviarCorreoAlerta" id="enviarcorreo" class="w-100 text-center my-4" method="POST">
                                <a onclick="document.getElementById('enviarcorreo').submit()"type="button" class="rounded-pill bg-primary p-2 px-5 text-light text-decoration-none"> <i class="fas fa-paper-plane"></i>  ENVIAR CORREO ALERTA</a>
                            </form>
                            <h5 class="card-title text-center">Información acerca de los alumnos</h5>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Última encuesta</th>
                                        <th>Grupo</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (datosAlum) { %>
                                        <% for(var i = 0; i < datosAlum.length; i++) { %>
                                            <tr>
                                                <td><%= datosAlum[i].user_nom %></td>
                                                <td><%= datosAlum[i].user_appat %></td>
                                                <td><%= datosAlum[i].enc_res %></td>
                                                <td><%= datosAlum[i].grupo_alum %></td>
                                                <td>
                                                    <a href="/infoAlum/<%= datosAlum[i].alumno_id%>" class="btn btn-info text-light"><i class="fas fa-eye"></i></a>
                                                    <a href="/eliminarAlum/<%= datosAlum[i].id_user %>" class="btn btn-danger text-light"><i class="fas fa-trash-alt"></i></a>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <%- include ('../partials/footerDirec') %>
    <%} else {%>
        <%-include('../partials/errorsinescuela')%>
    <%}%>
<%} else {%>
        <%-include('../partials/erroracceso')%>
    <%}%>

